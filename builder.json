{
    "name": "aws-crt-nodejs",
    "upstream": [],
    "downstream": [],
    "build": [
        ["git", "submodule", "update", "--init", "--recursive"],
        ["npm", "install", "--ignore-scripts"],
        [
            "npm", "run-script", "cmake", "--", "compile",
            "--cc={c}", "--cxx={cxx}",
            "--CDCMAKE_PREFIX_PATH=/opt/openssl",
            "--CDCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "-T", "install"
        ],
        ["npm", "run-script", "tsc"]
    ],
    "test": [
        ["node", "-p", "require('./dist/lib/index')"],
        ["npm", "run-script", "test"]
    ]
}
