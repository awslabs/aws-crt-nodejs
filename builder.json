{
    "name": "aws-crt-nodejs",
    "upstream": [],
    "downstream": [],
    "build": [
        ["git", "submodule", "update", "--init", "--recursive"],
        ["npm", "install", "--ignore-scripts"],
        ["npm", "run-script", "cmake", "--", "configure", "--cc={c}", "--cxx={cxx}", "--CDLibCrypto_DIR=/opt/openssl"],
        ["npm", "run-script", "cmake", "--", "build"],
        ["npm", "run-script", "cmake", "--", "build", "-T", "install"]
    ],
    "test": [
        ["node", "-p", "require('./dist/lib/index')"],
        ["npm", "run-script", "test"]
    ]
}
