{
    "extends": "./tsconfig.base",
    "include": [
        "lib/index.ts",
        "lib/common/*.ts",
        "lib/native/*.ts",
        "lib/native/binding.js",
    ],
    "compilerOptions": {
        "paths": {
            "@awscrt": [
                "lib/index.ts"
            ],
            "@awscrt/*": [
                "lib/native/*"
            ],
            "@test/*": [
                "test/*"
            ]
        }
    }
}
