{
    "name": "aws-crt-nodejs",
    "hosts": {
        "manylinux": {
            "enabled": false
        }
    },
    "targets": {
        "android": {
            "enabled": false
        },
        "linux": {
            "x86": {
                "enabled": false
            }
        }
    },
    "imports": ["nodejs", "s2n"],
    "upstream": [],
    "downstream": [],
    "deps_dir": "deps",
    "build_steps": [
        ["git", "submodule", "update", "--init", "--recursive"],
        ["npm", "install"]
    ],
    "test_steps": [
        ["env", "AWS_CRT_MEMORY_TRACING=2", "npm", "test"]
    ]
}
