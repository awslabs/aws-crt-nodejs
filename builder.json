{
    "name": "aws-crt-nodejs",
    "upstream": [],
    "downstream": [],
    "build": [
        ["git", "submodule", "update", "--init", "--recursive"],
        ["npm", "install", "--ignore-scripts"],
        ["npm", "run-script", "cmake", "configure", "--CDCMAKE_C_COMPILER={c}", "--CDCMAKE_CXX_COMPILER={cxx}", "--CDLibCrypto_DIR=/opt/openssl"],
        ["npm", "run-script", "cmake", "build"]
    ],
    "test": [
        ["node", "-p", "require('./dist/lib/index')"],
        ["npm", "run-script", "test"]
    ]
}
