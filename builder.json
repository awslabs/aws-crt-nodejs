{
    "name": "aws-crt-nodejs",
    "hosts": {
        "linux": {
            "architectures": {
                "x64": {
                    "image": "123124136734.dkr.ecr.us-east-1.amazonaws.com/aws-common-runtime/nodejs/10.1.0:x64"
                },
                "x86": {
                    "enabled": false
                }
            }
        },
        "al2012": {
            "enabled": false
        },
        "manylinux": {
            "enabled": false
        },
        "windows": {
            "enabled": false
        }
    },
    "targets": {
        "android": {
            "enabled": false
        }
    },
    "upstream": [],
    "downstream": [],
    "build": [
        ["git", "submodule", "update", "--init", "--recursive"],
        ["npm", "install", "--ignore-scripts"],
        [
            "npm", "run-script", "cmake", "--", "compile",
            "--cc={c}", "--cxx={cxx}",
            "--out={build_dir}",
            "--CDCMAKE_PREFIX_PATH=/opt/openssl",
            "--CDCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "-T", "install"
        ],
        ["npm", "run-script", "tsc"]
    ],
    "test": [
        ["ls", "dist"],
        ["ls", "dist", "lib"],
        ["node", "-p", "require('./dist/lib/index')"],
        ["npm", "run-script", "test"]
    ]
}
